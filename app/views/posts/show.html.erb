<h1 class = "title">
	<%= @post.title %>
</h1>

<p class = "body">
	<%= @post.body %>
</p>

<small><p class = "date">
	Submitted <%= time_ago_in_words(@post.created_at) %> Ago</p>
</small>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

 <%= link_to 'Back', posts_path %>